/**
 * "Mux" gate: Returns output as A or B depending on flag set.
 *
 * if sel == 0:
 *   out = a;
 * else:
 *   out = b;
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=notSel);
    And(a=b, b=sel, out=isB);
    And(a=a, b=notSel, out=isA);
    Or(a=isA, b=isB, out=out);
}